{
	"name": "@dubhe/universal-graphql-server",
	"version": "1.0.0",
	"description": "通用 GraphQL 服务器，自动适配 sui-rust-indexer 数据库",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"dev:node": "node --loader tsx/esm src/index.ts",
		"dev:ts-node": "ts-node-esm src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"test": "jest",
		"test:subscription": "node test-subscription.js",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"type-check": "tsc --noEmit"
	},
	"keywords": [
		"graphql",
		"postgraphile",
		"sui-indexer",
		"database-adapter",
		"websocket",
		"subscription",
		"postgresql",
		"dynamic"
	],
	"author": "Dubhe Team",
	"license": "MIT",
	"dependencies": {
		"@graphile/pg-pubsub": "^4.12.9",
		"dotenv": "^16.3.1",
		"graphql": "^15.8.0",
		"graphql-subscriptions": "^2.0.0",
		"graphql-ws": "^5.14.2",
		"pg": "^8.11.3",
		"postgraphile": "^4.13.0",
		"postgraphile-plugin-connection-filter": "^2.3.0",
		"ws": "^8.14.2"
	},
	"devDependencies": {
		"@types/node": "^20.8.10",
		"@types/pg": "^8.10.7",
		"@types/ws": "^8.5.8",
		"@typescript-eslint/eslint-plugin": "^6.9.1",
		"@typescript-eslint/parser": "^6.9.1",
		"eslint": "^8.52.0",
		"jest": "^29.7.0",
		"ts-node": "^10.9.1",
		"tsx": "^3.12.10",
		"typescript": "^5.2.2"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
