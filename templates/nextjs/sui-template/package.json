{
  "name": "dubhe-nextjs-template",
  "version": "1.0.0",
  "description": "Simple dubhe sui nextjs template",
  "type": "module",
  "scripts": {
    "dev": "mprocs",
    "// Utility Commands": "----------------",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "pnpm lint && pnpm format:check && pnpm type-check",
    "start:localnet": "pnpm dubhe node -f",
    "faucet": "pnpm dubhe faucet --network",
    "deploy": "pnpm dubhe publish --network",
    "upgrade": "pnpm dubhe upgrade --network",
    "schemagen": "pnpm dubhe schemagen",
    "account:gen": "pnpm dubhe generate-key --use-next-public",
    "check-balance": "pnpm dubhe check-balance --network",
    "config:store": "pnpm dubhe config-store --output-ts-path ./src/chain/config.ts --network",
    "indexer:sqlite": "pnpm sqlite-indexer --force-regenesis --network",
    "// Development Environment": "----------------",
    "setup:localnet": "pnpm account:gen && pnpm faucet localnet && pnpm run deploy localnet && pnpm run config:store localnet && pnpm run indexer:sqlite localnet",
    "setup:testnet": "pnpm account:gen && pnpm check-balance testnet && pnpm run deploy testnet && pnpm run config:store testnet && pnpm run indexer:sqlite testnet",
    "setup:mainnet": "pnpm account:gen && pnpm check-balance mainnet && pnpm run deploy mainnet && pnpm run config:store mainnet && pnpm run indexer:sqlite mainnet",
    "// Production Environment": "----------------",
    "prod:localnet": "pnpm config:store localnet && pnpm run indexer:sqlite localnet",
    "prod:testnet": "pnpm config:store testnet && pnpm run indexer:sqlite testnet",
    "prod:mainnet": "pnpm config:store mainnet && pnpm run indexer:sqlite mainnet",
    "// Next Environment": "----------------",
    "build": "next build",
    "start": "next start",
    "start:frontend": "pnpm next"
  },
  "dependencies": {
    "@0xobelisk/sui-cli": "link:../../../packages/sui-cli",
    "@0xobelisk/sui-client": "link:../../../packages/sui-client",
    "@0xobelisk/sui-common": "link:../../../packages/sui-common",
    "@0xobelisk/sui-indexer": "link:../../../packages/sui-indexer",
    "@mysten/dapp-kit": "0.14.46",
    "@tanstack/react-query": "^5.17.19",
    "dotenv": "^16.4.5",
    "jotai": "^1.7.2",
    "next": "^15.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^1.5.0"
  },
  "devDependencies": {
    "wait-on": "^8.0.3",
    "mprocs": "^0.7.1",
    "@eslint/eslintrc": "^3",
    "@types/node": "^18",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "eslint-config-next": "15.1.6",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "3.3.3"
  }
}
